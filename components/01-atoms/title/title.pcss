.title {
  color: var(--color-fg-base);
  font-family: var(--font-serif);
  font-weight: 700;
  font-style: normal;
  font-optical-sizing: auto;
  max-width: var(--size-charlimit-lg);
  margin-block-start: 0;
  margin-block-end: 0.5rem;
  
  &__icon {}
  
  /* this variant is for page titles on */
  &--page {
    margin-block: 2rem;
  }
  
  &--card {
    position: relative;
    display: block;
    margin: 0;
    padding-inline-start: 1rem;
    
    &::before {
      content: "";
      width: 6px;
      height: 100%;
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      background-color: var(--color-border-secondary);
      overflow: hidden;
      border-radius: var(--size-radius-sm);
    }
  }
  
  &--section {
    position: relative;
    display: block;
    padding-block-start: 1.5rem;
    
    &::before {
      --flag-height: 12px;
      --notch-calc: calc(100% - var(--flag-height));
      
      content: "";
      width: 5rem;
      height: var(--flag-height);
      position: absolute;
      top: 0;
      left: 0;
      background-color: var(--color-border-secondary);
      transform: translateX(calc((var(--flag-height) + var(--size-col-padding)) * -1));
      overflow: hidden;
      border-end-end-radius: var(--flag-height);
      border-start-start-radius: var(--flag-height);
    }
  }
  
  &--alert {
    margin: 0;
    font-family: var(--font-sans-serif);
  }
  
  &--sizeS {
    font-size: var(--size-text-small);
  }
  
  &--sizeM {
    font-size: var(--size-text-med);
  }
  
  &--sizeL {
    font-size: var(--size-text-lrg);
  }
  
  &--sizeXL {
    font-size: var(--size-text-ex-lrg);
  }
}